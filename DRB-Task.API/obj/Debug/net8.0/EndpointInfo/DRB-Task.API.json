{
  "openapi": "3.0.1",
  "info": {
    "title": "DRB-Task.API",
    "version": "1.0"
  },
  "paths": {
    "/api/Drivers/add": {
      "post": {
        "tags": [
          "Drivers"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatedDriverDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatedDriverDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreatedDriverDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/CreatedResult"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreatedResult"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreatedResult"
                }
              }
            }
          }
        }
      }
    },
    "/api/Drivers/{id}/history": {
      "get": {
        "tags": [
          "Drivers"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DriverHistoryDto"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DriverHistoryDto"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DriverHistoryDto"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/Routes/add": {
      "post": {
        "tags": [
          "Routes"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatedRouteDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatedRouteDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreatedRouteDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/CreatedResult"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreatedResult"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreatedResult"
                }
              }
            }
          }
        }
      }
    },
    "/api/Routes": {
      "get": {
        "tags": [
          "Routes"
        ],
        "parameters": [
          {
            "name": "DriverId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "SortingOption",
            "in": "query",
            "schema": {
              "$ref": "#/components/schemas/RouteSortingOptions"
            }
          },
          {
            "name": "SearchValue",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Page",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "PageSize",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/RouteDtoPaginatedResult"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RouteDtoPaginatedResult"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/RouteDtoPaginatedResult"
                }
              }
            }
          }
        }
      }
    },
    "/api/Schedule": {
      "post": {
        "tags": [
          "Schedule"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ScheduleOperationDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ScheduleOperationDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ScheduleOperationDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/CreatedResult"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreatedResult"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreatedResult"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreatedDriverDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "licenseType": {
            "type": "string",
            "nullable": true
          },
          "availability": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "CreatedResult": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreatedRouteDto": {
        "required": [
          "distance",
          "endLocation",
          "estimatedTime",
          "startLocation"
        ],
        "type": "object",
        "properties": {
          "startLocation": {
            "maxLength": 200,
            "minLength": 2,
            "type": "string"
          },
          "endLocation": {
            "maxLength": 200,
            "minLength": 2,
            "type": "string"
          },
          "distance": {
            "minimum": 0.1,
            "type": "number",
            "format": "double"
          },
          "estimatedTime": {
            "type": "string",
            "format": "date-span"
          }
        },
        "additionalProperties": false
      },
      "DriverHistoryDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "history": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/HistoryRecordDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "HistoryRecordDto": {
        "type": "object",
        "properties": {
          "startLocation": {
            "type": "string",
            "nullable": true
          },
          "endLocation": {
            "type": "string",
            "nullable": true
          },
          "completedOn": {
            "type": "string",
            "format": "date-time"
          },
          "distance": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "RouteDto": {
        "type": "object",
        "properties": {
          "startLocation": {
            "type": "string",
            "nullable": true
          },
          "endLocation": {
            "type": "string",
            "nullable": true
          },
          "distance": {
            "type": "number",
            "format": "double"
          },
          "estimatedTime": {
            "type": "string",
            "format": "date-span"
          },
          "routeStatus": {
            "type": "string",
            "nullable": true
          },
          "driverName": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RouteDtoPaginatedResult": {
        "type": "object",
        "properties": {
          "page": {
            "type": "integer",
            "format": "int32"
          },
          "pageSize": {
            "type": "integer",
            "format": "int32"
          },
          "itemsCount": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "totalCount": {
            "type": "integer",
            "format": "int32"
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RouteDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RouteSortingOptions": {
        "enum": [
          "DistanceAsc",
          "DistanceDesc"
        ],
        "type": "string"
      },
      "RouteStatus": {
        "enum": [
          "Pending",
          "Assigned",
          "Active",
          "Completed",
          "Unassigned"
        ],
        "type": "string"
      },
      "ScheduleOperationDto": {
        "required": [
          "operationType",
          "routeId"
        ],
        "type": "object",
        "properties": {
          "operationType": {
            "minLength": 1,
            "pattern": "AssignDriver|ChangeRouteStatus|UnassignDriver|AutoAssignDriver",
            "type": "string"
          },
          "routeId": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "driverId": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "newStatus": {
            "$ref": "#/components/schemas/RouteStatus"
          }
        },
        "additionalProperties": false
      }
    }
  }
}